#prompt user
echo "Enter CustomerID"
read Customer ID
echo "Enter CustomerName"
read CustomerName
echo "UnitConsumed"
read UnitConsumed
if [UnitConsumed _le 199];then
charge=$(echo "$UnitConsumed  * 120"|bc)
elif[$UnitConsumed_ge 200]&&[$UnitConsumed_lt 400];then
charge=$(echo "UnitConsumed * 150" |bc)
elif[$UnitConsumed_ge 400]&&[$UnitConsumed_lt 600];then
charge=$(echo "UnitConsumed * 180" |bc)
else
charge=$(echo "$UnitConsumed *200|bc)
if [$Charge_gt 400];then
surcharge=$(echo"$Charge *0.20"|bc)
TotalBill=$(echo "$Charge + $Surcharge" |bc)
else
TotalBill=$Charge
echo "Customer ID :$CustomerID"
echo "Customer Name :$CustomerName"
echo"TotalBill:Ksh $TotalBill"9




