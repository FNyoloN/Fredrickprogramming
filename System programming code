#calculate basic pay
basic pay=$(echo"Shours Srate"|bc
#calculate tax based on basic pay
if(basic_pay_gt 700) then tax=$
(echo "0.25*basic_pay"|bc) elif
[Sbasic_pay_age 15000];then tax=$(echo"0.15*basic_pay"|bc)
else
tax=0
#calculate net pay
net pay$(echo "Sbasic_pay -Stax"|bc)
#display results
echo 'Employee:Sname"
echo "Basic pay: Sbasic_pay"
echo "Tax:Stax"


